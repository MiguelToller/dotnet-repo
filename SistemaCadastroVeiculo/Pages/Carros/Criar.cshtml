@page
@model SistemaCadastroVeiculo.Pages.Carros.CriarModel
@{
    ViewData["Title"] = "Cadastrar Carro";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Carro.Id"></label>
        <input asp-for="Carro.Id" class="form-control" />
        <span asp-validation-for="Carro.Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carro.Modelo"></label>
        <input asp-for="Carro.Modelo" class="form-control" />
        <span asp-validation-for="Carro.Modelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carro.Marca"></label>
        <input asp-for="Carro.Marca" class="form-control" />
        <span asp-validation-for="Carro.Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carro.Renavam"></label>
        <input asp-for="Carro.Renavam" class="form-control" />
        <span asp-validation-for="Carro.Renavam" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carro.AnoFabricação"></label>
        <input asp-for="Carro.AnoFabricação" class="form-control" />
        <span asp-validation-for="Carro.AnoFabricação" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carro.AnoModelo"></label>
        <input asp-for="Carro.AnoModelo" class="form-control" />
        <span asp-validation-for="Carro.AnoModelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Carro.Imagem"></label>
        <input asp-for="Carro.Imagem" type="file" class="form-control" />
        <span asp-validation-for="Carro.Imagem" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
